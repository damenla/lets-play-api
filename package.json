{
	"name": "lets-play-api",
	"version": "1.0.0",
	"description": "API para gestionar partidos de deportes en equipo",
	"homepage": "https://github.com/damenla/lets-play-api#readme",
	"bugs": {
		"url": "https://github.com/damenla/lets-play-api/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/damenla/lets-play-api.git"
	},
	"license": "ISC",
	"author": "damenla@gmail.com",
	"type": "commonjs",
	"main": "dist/server.js",
	"scripts": {
		"build": "tsc",
		"db:migrate": "ts-node scripts/migrate.ts",
		"db:reset": "ts-node scripts/reset-db.ts",
		"dev:inmemory": "IN_MEMORY_DATA=true nodemon src/server.ts",
		"dev": "nodemon src/server.ts",
		"prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
		"start:inmemory": "IN_MEMORY_DATA=true ts-node src/server.ts",
		"start:prod": "node dist/server.js",
		"start": "ts-node src/server.ts",
		"test:coverage": "vitest --coverage",
		"test": "vitest"
	},
	"devDependencies": {
		"@types/bcrypt": "^6.0.0",
		"@types/express": "^5.0.6",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/node": "^25.2.2",
		"@types/pg": "^8.16.0",
		"@types/supertest": "^6.0.3",
		"nodemon": "^3.1.11",
		"prettier": "^3.8.1",
		"supertest": "^7.2.2",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.3",
		"vitest": "^4.0.18"
	},
	"dependencies": {
		"bcrypt": "^6.0.0",
		"dotenv": "^17.3.1",
		"express": "^5.2.1",
		"jsonwebtoken": "^9.0.3",
		"pg": "^8.18.0"
	}
}