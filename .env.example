# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
# Set to 'true' to use in-memory storage (for development/testing without DB)
IN_MEMORY_DATA=false

# Common Connection Parameters
DB_POOL_MAX=10
DB_IDLE_TIMEOUT=10000
DB_CONNECTION_TIMEOUT=2000

# Connection String (Recommended for Cloud/Docker)
# DATABASE_URL=postgres://user:password@localhost:5432/lets_play

# Individual Connection Parameters (Only used if DATABASE_URL is not set)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=lets_play
DB_USER=user
DB_PASSWORD=password

# Security Configuration
# CRITICAL: Change this to a strong secret in production
JWT_SECRET=replace_this_with_a_strong_secret_key_in_production
# Token validity in seconds (default: 300 = 5 minutes)
JWT_EXPIRATION_SECONDS=300
